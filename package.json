{
  "private": true,
  "name": "boardgame",
  "version": "3.0.0",
  "license": "MIT",
  "repository": "https://github.com/Pong420/fullstack.git",
  "author": "Pong <samfunghp@gmail.com>",
  "scripts": {
    "dev": "lerna run dev --stream --parallel",
    "web": "yarn workspace @boardgame/web",
    "server": "yarn workspace @boardgame/server",
    "template": "yarn workspace @boardgame/template",
    "build:games": "lerna run build --stream --parallel --ignore '@boardgame/{server,web,template,scss}'",
    "postinstall": "lerna run postinstall --stream --parallel",
    "heroku-postbuild": "yarn build --ignore @fullstack/app"
  },
  "workspaces": [
    "packages/*",
    "packages/games/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "babel-eslint": "10.0.3",
    "eslint": "6.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "^5.1.3",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --rule 'no-console: [\"error\", { allow: [\"warn\", \"error\"] }]' --max-warnings=0",
      "prettier --ignore-path .eslintignore --write"
    ],
    "{*.json,.{babelrc,eslintrc,prettierrc}}": [
      "prettier --ignore-path .eslintignore --write"
    ],
    "*.{css,scss}": [
      "prettier --ignore-path .eslintignore --single-quote --write"
    ],
    "*.{yml,md}": [
      "prettier --ignore-path .eslintignore --single-quote --write"
    ]
  },
  "engines": {
    "node": "14.x"
  }
}
